all: build test clean

build:
	gcc 7-6.c

test:
	@echo "--------------------------------------------------------------------------------------------------------"
	cat -n testfile1 
	cat -n testfile2
	@echo "--------------------------------------------------------------------------------------------------------"
	./a.out testfile1 testfile2
	@echo "--------------------------------------------------------------------------------------------------------"
	cat -n testfile3 
	cat -n testfile4
	@echo "--------------------------------------------------------------------------------------------------------"
	./a.out testfile3 testfile4
	@echo "--------------------------------------------------------------------------------------------------------"
	cat -n testfile5 
	cat -n testfile6
	@echo "--------------------------------------------------------------------------------------------------------"
	./a.out testfile5 testfile6
	@echo "--------------------------------------------------------------------------------------------------------"
	cat -n testfile7 
	cat -n testfile8
	@echo "--------------------------------------------------------------------------------------------------------"
	./a.out testfile7 testfile8
	@echo "--------------------------------------------------------------------------------------------------------"
	cat -n testfile9 
	cat -n testfile10
	@echo "--------------------------------------------------------------------------------------------------------"
	./a.out testfile9 testfile10
	@echo "--------------------------------------------------------------------------------------------------------"
	cat -n testfile11
	cat -n testfile12
	@echo "--------------------------------------------------------------------------------------------------------"
	./a.out testfile11 testfile12
	@echo "--------------------------------------------------------------------------------------------------------"

clean:
	rm -rf ./a.out
